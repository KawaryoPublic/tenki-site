generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Observation {
  day         Int         @unique
  morning     String[]
  noon        String[]
  afterSchool String[]
}

model DateInfo {
  date                 String       @unique
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  plan                 String
  holiday              String[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  tags      String[]
  urls      String[]
  filenames String[]
  tier      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Box {
  id         Int      @id @default(autoincrement())
  name       String
  content    String
  imageLink  String
  tab        Int
  width      Int
  height     Int
  top        Int
  left       Int
}

model File {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  tags      String[]
  tier      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Manual {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  tags      String[]
  urls      String[]
  filenames String[]
  tier      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Equipment {
  id          Int      @id @default(autoincrement())
  name        String
  content     String[]
  location    String
  tags        String[]
  urls        String[]
  filenames   String[]
  tier        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}