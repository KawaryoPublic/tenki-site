generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Observation {
  day         Int         @id @unique
  morning     String[]
  noon        String[]
  afterSchool String[]
}

model DateInfo {
  date      String       @id @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  plan      String
  holiday   String[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  tags      String[]
  urls      String[]
  filenames String[]
  tier      Int
  roles     Int[]
  roleNames String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  tags      String[]
  tier      Int
  roles     Int[]
  roleNames String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Manual {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  tags      String[]
  urls      String[]
  filenames String[]
  tier      Int
  roles     Int[]
  roleNames String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shelf {
  id         Int      @id @default(autoincrement())
  name       String
  type       Int
  location   Location @relation(fields: [locationId], references: [id])
  locationId Int
  size       Int[]
  position   Int[]
  height     Int[]
  equipment  Json[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Location {
  id        Int    @id @default(autoincrement())
  name      String 
  size      Int[]
  equipment Equipment[]
  shelves   Shelf[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Equipment {
  id          Int      @id @default(autoincrement())
  name        String
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int
  number      Int
  size        Int[]
  contents    String[]
  description String
  tags        String[]
  urls        String[]
  filenames   String[]
  roles       Int[]
  roleNames   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Role {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  markLink        String
  markName        String
  person          String
  personDetail    String
  personImageLink String
  personImageName String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}